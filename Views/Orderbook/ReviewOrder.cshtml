@model IEnumerable<DistributerManagementSystemModels.Orderbook>

@{
    ViewData["Title"] = "Review Order";
}

<h1 class="text-center mb-4">Review Order</h1>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}

<div class="container">
    <div class="bill-header p-3 mb-3">
        <h3 class="text-center">Order Summary</h3>
        <hr />
    </div>

    <div class="bill-body">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    
                    <th>Retailer Name</th>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Total Amount</th>
                    <th>Paid Status</th>
                    <th>Order Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        
                        <td>@item.RetailerName</td>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>@item.TotalAmount.ToString("C")</td>
                        <td>@(item.IsPaid ? "Paid" : "Pending")</td>
                        <td>@item.OrderStatus</td>
                        <td>
                            <a asp-action="EditOrderFromReview" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="bill-footer mt-4">
        <h4 class="text-right">Total Amount: @Model.Sum(item => item.TotalAmount).ToString("C")</h4>
        <div class="text-center mt-3">
            <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("FieldAgentOrders", "Orderbook", new { message = "Order Created Successfully" })'">Confirm Order</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}

<style>
    .bill-header {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
    }

    .bill-body {
        padding: 20px;
    }

    .bill-footer {
        border-top: 1px solid #ddd;
        padding-top: 10px;
    }

    table {
        width: 100%;
    }

    th {
        background-color: #343a40 !important; /* Dark background */
        color: #ffffff !important; /* White text color for contrast */
        text-align: center;
    }

    td {
        text-align: center;
        vertical-align: middle;
    }

    .btn {
        margin: 0 2px;
    }
</style>
