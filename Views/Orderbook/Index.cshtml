@model IEnumerable<DistributerManagementSystemModels.Orderbook>

@{
    ViewData["Title"] = "Orderbook";
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}

<h1 class="display-4 mb-4">Orderbook</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success mr-2">Create New Order</a>
    <a asp-action="DispatchedOrders" class="btn btn-info">View Dispatched Orders</a>
</div>

<table class="table table-striped table-bordered shadow-sm mt-3" id="myTable">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.OrderNumber)</th>
            <th>@Html.DisplayNameFor(model => model.RetailerName)</th>
            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.TotalAmount)</th>
            <th>@Html.DisplayNameFor(model => model.IsPaid)</th>
            <th>@Html.DisplayNameFor(model => model.BalanceAmount)</th>
            <th>@Html.DisplayNameFor(model => model.OrderStatus)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.OrderNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.RetailerName)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalAmount)</td>
                <td>@Html.DisplayFor(modelItem => item.IsPaid)</td>
                <td>@Html.DisplayFor(modelItem => item.BalanceAmount)</td>
                <td>@Html.DisplayFor(modelItem => item.OrderStatus)</td>
                <td>
                    <a asp-action="Dispatched" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Dispatch</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "pagingType": "simple_numbers", // Simplified pagination controls
                "lengthMenu": [5, 10, 25, 50], // Control page size options
                "language": {
                    "search": "Search orders:", // Custom search field placeholder
                }
            });
        });
    </script>
}
